{
  "name": "@near-wallet-selector/ledger",
  "version": "8.9.14",
  "description": "Ledger package for NEAR Wallet Selector.",
  "keywords": [
    "near",
    "blockchain",
    "wallets",
    "dapps",
    "near-protocol",
    "near-blockchain",
    "wallet selector",
    "hardware wallet",
    "ledger"
  ],
  "scripts": {
    "build": "pnpm lmdk-build --entryPoints index.ts,src/**/*.ts --tsconfig tsconfig.prod.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/near/wallet-selector.git"
  },
  "bugs": {
    "url": "https://github.com/near/wallet-selector/issues"
  },
  "homepage": "https://github.com/near/wallet-selector/tree/main/packages/ledger",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    },
    "./*": {
      "types": "./lib/types/*",
      "import": "./lib/esm/*",
      "require": "./lib/cjs/*"
    }
  },
  "files": [
    "./lib"
  ],
  "devDependencies": {
    "@ledgerhq/device-management-kit": "^0.4.0",
    "@ledgerhq/device-signer-kit-near": "workspace:*",
    "@ledgerhq/esbuild-tools": "workspace:*",
    "@ledgerhq/eslint-config-dsdk": "workspace:*",
    "@ledgerhq/jest-config-dsdk": "workspace:*",
    "@ledgerhq/prettier-config-dsdk": "workspace:*",
    "@ledgerhq/tsconfig-dsdk": "workspace:*",
    "@near-wallet-selector/core": "^8.9.13",
    "@near-wallet-selector/wallet-utils": "^8.9.13",
    "is-mobile": "^5.0.0",
    "near-api-js": "^5.0.1"
  },
  "peerDependencies": {
    "@near-wallet-selector/core": "^8.9.13",
    "@near-wallet-selector/wallet-utils": "^8.9.13",
    "is-mobile": "^5.0.0",
    "near-api-js": "^5.0.1",
    "@ledgerhq/device-management-kit": "workspace:*"
  }
}